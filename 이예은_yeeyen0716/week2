#include <iostream>
using namespace std;

int stick[100000];

int main() {
	ios::sync_with_stdio(false);
	cin.tie(NULL);
	int N, h;

	cin >> N;
	for (int i = 0; i < N;i++) {
		cin >> h;
		stick[i] = h;
	}

	int count =0;
	int max=0;

	for (int i = N - 1;i >= 0;i--) {
		if (max<stick[i]) {
			max = stick[i];
			count++;
		}
	}

	cout << count;

}
