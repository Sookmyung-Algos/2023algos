#include <iostream>
using namespace std;

int main(){
    int N, x, y;
    cin >> N;
    cin >> x >> y;
    if (N == 1) cout << 0 << "\n";
    else if (x == 1 && y == 1 || x == 1 && y== N || x == N && y == 1 || x == N && y == N) cout << 2;
    else if (x == 1 || y == 1 || x == N || y == N) cout << 3;
    else cout << 4;
}
